<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/wifi_name"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/wifi_name_hint"
        android:inputType="text" />

    <EditText
        android:id="@+id/wifi_password"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/wifi_password_hint"
        android:inputType="textVisiblePassword" />
    <EditText
        android:id="@+id/wifi_ip"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/wifi_ip_hint"/>

    <EditText
        android:id="@+id/wifi_port"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/wifi_port_hint" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/wifi_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_text"
        android:layout_weight="1"
        android:onClick="onClickSave"/>
    <Button
        android:id="@+id/wifi_setProxy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_text"
        android:layout_weight="1"
        android:onClick="onClickSetProxy" />
    <Button
        android:id="@+id/wifi_unsetProxy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unset_text"
        android:layout_weight="1"
        android:onClick="onClickUnsetProxy"/>
    <Button
        android:id="@+id/wifi_connect_button"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/connect_text"
        android:onClick="onClickConnect"/>

</LinearLayout>


</LinearLayout>